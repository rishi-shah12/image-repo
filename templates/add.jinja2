{% extends 'base-logged-in.jinja2' %}

{% block head %}


<style>
    .page-wrapper{
        height: 100vh;
        background:url({{ url_for('static', filename = 'bg.jpg') }}) ;
        background-position: 0px, -50px;
        background-size: 125%;
        background-repeat: no-repeat;
        background-size: cover;
    }
    .title-wrapper p{
        font-size: 16px;
    }
    .form-signin {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}
.form-signin .checkbox {
  font-weight: 400;
}
.form-signin .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.form-signin input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
btn:hover{
    background-color: #371055;
}
</style>
{% endblock %}

<body>
{% block content %}
    <div class="page-wrapper" >
        <div class="title-wrapper">
            <div class="gap" style="padding-bottom: 3rem"></div>
      <h1 style="font-size: 32px; ">Welcome Back!</h1>
      <p style="font-size: 16px; padding-bottom: 3rem">We're Glad to See You Again</p>
        </div>
        <form style="text-align: center" method="POST" action="" enctype="multipart/form-data">

      <input type="file" name="file" multiple accept="image/*" required>
            <br>
            <div style="padding-bottom: 3rem"></div>
      <input type="radio" id="public" name="perms" value="public">
      <label for="public">Public</label><br>
      <input type="radio" id="private" name="perms" value="private">
      <label for="private">Private</label><br>
            <div style="padding-bottom: 3rem"></div>
        <a href="{{ url_for('upload_file') }}"><button class="btn">Add Image</button></a>
    </form>

        </div>
    </div>
{% endblock %}
</body>
